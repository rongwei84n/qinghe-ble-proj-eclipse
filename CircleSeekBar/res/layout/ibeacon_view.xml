<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
        android:layout_margin="1dp">
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="1dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="MAC:"
                  android:layout_marginLeft="10dp"
                  android:textColor="#39c9e3"
                  android:textSize="20sp"/>
        <TextView android:id="@+id/device_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#39c9e3"
                android:textSize="20sp"/>
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="#99ccff"
                  android:layout_margin="1dp"
                  >
    </LinearLayout>
    
        <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/ib_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="#39c9e3"
            
            />
        <EditText android:id="@+id/ib_name_text"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textColor="#0000ff"
            android:textSize="15sp"
            android:layout_marginTop="1dp"
            android:textCursorDrawable="@null"
            android:background="@null"
            />
       
        <Button android:id="@+id/set_dev_name"
            android:layout_width="wrap_content"
            android:layout_height="38sp"
            android:text="更新蓝牙名"
            android:layout_marginRight="10dp"
            android:textSize="13sp"
            />
             
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="#99ccff"
                  android:layout_margin="5dp"
                  >
    </LinearLayout>
 
    <LinearLayout android:orientation="horizontal"
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/ib_uuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UUID:"
            android:textSize="14dp"
            android:textColor="#39c9e3"
            android:layout_marginLeft="10dp"
            />
        
        <EditText android:id="@+id/ib_uuid_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textColor="#0000ff"
            android:textSize="14sp"
            android:layout_marginTop="1dp"
            android:textCursorDrawable="@null"
            android:background="@null"
            />

    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="#99ccff"
                  android:layout_margin="5dp"
                  >
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    	<TextView android:id="@+id/ib_mayjor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Major:"
            android:textSize="20dp"
            android:textColor="#39c9e3"
            android:layout_marginLeft="10dp"/>
        
        <EditText android:id="@+id/ib_mayjor_text"
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textColor="#0000ff"
            android:textSize="20sp"
            android:layout_marginTop="1dp"
            android:textCursorDrawable="@null"
            android:background="@null"
            />
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="#99ccff"
                  android:layout_margin="5dp"
                  >
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/ib_minor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minor:"
            android:textSize="20dp"
            android:textColor="#39c9e3"
            android:layout_marginLeft="10dp"/>
        
        <EditText android:id="@+id/ib_minor_text"
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textSize="20sp"
            android:textColor="#0000ff"
            android:layout_marginTop="1dp"
            android:textCursorDrawable="@null"
            android:background="@null"
            />

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="#99ccff"
                  android:layout_margin="5dp"
                  >
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal"
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <!-- 
        <Button android:id="@+id/password_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码关"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            /> -->
        <TextView android:id="@+id/pass_txt"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Password："
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="#39c9e3"
            />
        <EditText android:id="@+id/pass_value"
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:text="123456"
            android:textColor="#0000ff"
            android:textSize="20sp"
            android:layout_marginTop="1dp"
            android:textCursorDrawable="@null"
            android:background="@null"
             android:digits="1234567890."
             android:singleLine="true"
             android:inputType ="number"
            />
        <!-- 
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/password_write"
            android:text="密码写入"
            android:textSize="12sp"
            />
         -->
    </LinearLayout>
    
<LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="#99ccff"
                  android:layout_margin="5dp"
                  >
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal"
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <!-- 
        <Button android:id="@+id/password_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码关"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            /> -->
        <TextView android:id="@+id/new_pass_txt"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="new Password："
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="#39c9e3"
            />
        <EditText android:id="@+id/new_pass_value"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:text="123456"
            android:textColor="#0000ff"
            android:textSize="20sp"
            android:layout_marginTop="1dp"
            android:textCursorDrawable="@null"
            android:background="@null"
             android:digits="1234567890."
             android:singleLine="true"
             android:inputType ="number"
            />
        
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/password_write"
            android:text="更改密码"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            />
         
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="#99ccff"
                  android:layout_margin="5dp"
                  >
    </LinearLayout>
    
    
    


    
  
        <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
            <Button android:id="@+id/ib_button"
            android:layout_width="170sp"
            android:layout_height="wrap_content"
            android:text="配置"
            android:textSize="20sp"
            
            android:layout_marginTop="10sp"
            android:layout_marginLeft="80sp"
           
            />
        
    </LinearLayout>

        <TextView
            android:id="@+id/set_name_success_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="" />

        <TextView
            android:id="@+id/set_password_success_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="" />

        <TextView
            android:id="@+id/set_major_success_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="" />

        <TextView
            android:id="@+id/set_minor_success_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="" />

        <TextView
            android:id="@+id/set_uuid_success_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="" />
    
</LinearLayout>






