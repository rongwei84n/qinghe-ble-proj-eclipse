<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/led_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Name:" />

    <TextView
        android:id="@+id/led_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/led_name"
        android:layout_marginLeft="10dp"
        android:text="MAC:" />

    <TextView
        android:id="@+id/led_rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/led_mac"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="rssi:-50db" />

    <TextView
        android:id="@+id/led_type113"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/led_rssi"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="type:switch"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_above="@+id/led_type113"
        android:layout_centerHorizontal="true"
        android:src="@drawable/light_semitrans" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginRight="18dp"
        android:src="@drawable/array" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/led_type113"
        android:layout_below="@+id/imageView1"
        android:text="" />

</RelativeLayout>